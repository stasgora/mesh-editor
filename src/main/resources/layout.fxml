<VBox minWidth="250.0" prefHeight="556.0" prefWidth="808.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sgora.mesh.editor.view.WindowController">
	<MenuBar layoutX="185.0" layoutY="-14.0">
		<Menu text="_File">
			<MenuItem onAction="#newProject" text="_New">
				<accelerator>
					<KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
				</accelerator>
			</MenuItem>
			<MenuItem onAction="#openProject" text="_Open">
				<accelerator>
					<KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
				</accelerator>
			</MenuItem>
			<Menu disable="true" mnemonicParsing="false" text="Open _Recent">
				<accelerator>
					<KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
				</accelerator>
			</Menu>
			<MenuItem fx:id="closeProjectMenuItem" disable="true" onAction="#closeProject" text="_Close">
				<accelerator>
					<KeyCodeCombination alt="UP" code="C" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
				</accelerator>
			</MenuItem>
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem fx:id="saveProjectMenuItem" disable="true" onAction="#saveProject" text="_Save">
	            <accelerator>
		            <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
	            </accelerator>
            </MenuItem>
            <MenuItem fx:id="saveAsMenuItem" disable="true" onAction="#saveProjectAs" text="Save _As">
	            <accelerator>
		            <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
	            </accelerator>
            </MenuItem>
			<SeparatorMenuItem mnemonicParsing="false" />
			<MenuItem onAction="#exitApp" text="_Quit">
				<accelerator>
					<KeyCodeCombination alt="UP" code="Q" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
				</accelerator>
			</MenuItem>
		</Menu>
	</MenuBar>
   <MainToolBar fx:id="toolBar" prefHeight="18.0" prefWidth="808.0" />
	<SplitPane fx:id="mainSplitPane" dividerPositions="0.25" prefHeight="465.0" prefWidth="808.0" VBox.vgrow="ALWAYS">
		<AnchorPane fx:id="propertiesPane" minHeight="0.0" minWidth="200.0" prefHeight="160.0" prefWidth="100.0" />
		<MainView fx:id="mainView" minHeight="0.0" minWidth="200.0" prefHeight="160.0" prefWidth="100.0">
			<ImageCanvas fx:id="imageCanvas" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
			<MeshCanvas fx:id="meshCanvas" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
		</MainView>
	</SplitPane>
</VBox>
